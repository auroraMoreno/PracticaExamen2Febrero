@model IEnumerable<PracticaExamen2Febrero.Models.Coche>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="Coches">Create New</a>
    <a asp-action="BuscarCochesModelo" asp-controller="Coches">Buscar por modelo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCoche)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conductor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCoche)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conductor)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {idcoche=item.IdCoche}) |
                @Html.ActionLink("Details", "Details", new {idcoche = item.IdCoche}) |
                @Html.ActionLink("Delete", "Delete", new {  idcoche=item.IdCoche  })
            </td>
        </tr>
}
    </tbody>
</table>
